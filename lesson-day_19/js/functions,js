//ex5 
let oron = function (a){
    let too = a.toString();
    too = too.split("").reverse().join("");
    return `${a} => ${too}`;
}
console.log(oron(789));


//ex6 
let word = function (b){
    let word1 = b.toString();
    word1 = word1.split('').reverse().join('');
    if (b == word1){
        return true;
    } else {
        return false
    }
}
console.log(word('mom'));

