console.log(sum1);

let sum2 = addNumbers(1, 2, 3);
console.log(sum2);

// function expression 
let x = function (num) {
    return num * num;
}
console.log(x(4));

let add = function (a, b) {
    return a + b;
}
console.log(add(1, 2));


// arrow function 
let z = (num) => {
    return num + num;
}
console.log(z(3));

let myFunction = (a, b) => {
    if (a > b) {
        return a;
    } else if (b > a) {
        return b;
    } else {
        return "Equal";
    }
}
console.log(myFunction(8, 89));


let range = (min, max) => {
    let sum = 0;
    for ( let i = min; i <= max;  i++ ){
       sum += i;
    }
    return sum;
}
console.log(range(1, 10));

